<div class="jumbotron">
    <h1 class="display-4">Lily's Burger Shop</h1>
    <p class="lead" id="bestBurgers">Best Rated Burgers in Raleigh, NC</p>
    <hr class="my-4">
    
    <form class="create-form">
        <h5>Order a Burger:</h5>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><img id="burgerIcon" src="https://freeiconshop.com/wp-content/uploads/edd/burger-outline-filled.png" alt="Burger Icon"></span>
            </div>
            <input type="text" class="form-control" placeholder="Enter Burger Name Here" id="addBurger" name="burgerName">
        </div>

        <button type="submit" class="btn btn-outline-success">Place Order!</button>
    </form>

</div>

<div class="container">

    <div class="row justify-content-around"> 

        <div class="col">
            <h2>Burgers Ready for Pickup:</h2>

            <ul>
                {{#each burgers}}
                    {{#unless eaten}}
                        {{> burgers/burgerBtns eat=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col">
            <h2>Burgers That Have Been Eaten:</h2>

            <ul>
                {{#each burgers}}
                    {{#if eaten}}
                        {{> burgers/burgerBtns eat=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>

</div>
















